<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/ic_img">
        <shape>
            <corners android:radius="50dp"></corners>
            <size
                android:width="80dp"
                android:height="80dp"
                />
           
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ACA9A9"></solid>
            <corners android:radius="50dp"></corners>
            <size
                android:width="80dp"
                android:height="80dp"
                />
        </shape>
    </item>
</selector>